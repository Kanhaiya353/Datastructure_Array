#include<bits/stdc++.h>
using namespace std;
void evenbig(int a[],int n)
{
	int evenpos=n/2;
	int oddpos=n-evenpos;
	int temp[n];
	for(int i=0;i<n;i++)
	{
		temp[i]=a[i];
	}
	int j=oddpos-1;
	for(int i=0;i<n;i+=2)
	{
		a[i]=temp[j];
		j--;
	}
	j=oddpos;
	for(int i=1;i<n;i+=2)
	{
		a[i]=temp[j];
		j++;
	}
	for(int i=0;i<=n;i++)
	{
		cout<<a[i];
	}
	
	
	
}
int main()
{
	int a[]={1,2,3,4,5,6,7};
	int n=sizeof(a)/sizeof(a[0]);
	evenbig(a,n);
	
	


}
